<!DOCTYPE html>
<html>
<head>
	<title>Link</title>
	<%= stylesheet_link_tag    "application", :media => "all" %>
	<%= javascript_include_tag "application" %>
	<%= csrf_meta_tags %>
</head>
<body>

	<div class="navbar navbar-fixed-top">
		<div class="navbar-inner">
			<div class="container">
				<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</a>
				<a href="/" class="brand">Link</a>
				<div class="nav-collapse collapse">
					<ul class="nav pull-right">	        
						<li><%= link_to "Welcome! #{current_user.name}", user_path(current_user)%></li>
						<li><%= link_to "Sign out", :signout %></li>
					</ul>
				</div>
			</div>
		</div>
	</div>
	
	<div class="container">
		<div class="row">
			<div class="span6 offset3 flash_container">
				<div class="flash_messages"><center><%= render :partial => "shared/flash_messages" %></center></div>
			</div>
		</div>
		
		<%= yield %>
	</div>
</body>
</html>
